<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.cryptorich.KøbSælgController">
   <children>
      <MenuBar prefHeight="29.0" prefWidth="800.0">
         <menus>
            <Menu mnemonicParsing="false" text="Oversigt">
               <items>
                  <RadioMenuItem mnemonicParsing="false" onAction="#switchToMinMainMenu" text="Min portfølje">
                     <toggleGroup>
                        <ToggleGroup fx:id="Menu" />
                     </toggleGroup>
                  </RadioMenuItem>
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Konto">
               <items>
                  <RadioMenuItem mnemonicParsing="false" onAction="#switchToKøbSælg" text="Køb/sælg" toggleGroup="$Menu" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Simulation">
               <items>
                  <RadioMenuItem mnemonicParsing="false" onAction="#switchToForventetAfkast" text="Forventet afkast" toggleGroup="$Menu" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Slider fx:id="BalanceSlider" layoutX="27.0" layoutY="140.0" majorTickUnit="100.0" max="1000.0" minorTickCount="5" prefHeight="38.0" prefWidth="416.0" showTickLabels="true" showTickMarks="true" />
      <Label fx:id="BalanceLabel" layoutX="113.0" layoutY="94.0" text="0">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Text layoutX="27.0" layoutY="113.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Balance:">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Button layoutX="382.0" layoutY="93.0" mnemonicParsing="false" text="Apply" />
   </children>
</AnchorPane>
